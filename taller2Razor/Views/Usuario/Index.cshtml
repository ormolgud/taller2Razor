@model IEnumerable<taller2Razor.Models.tbUsuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuarios</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Rol</th>
        <th>Email</th>
    </tr>


    @foreach (var usu in Model)
    {
        <tr>
            <td>@usu.IdUsuario</td>
            <td>@usu.NombreUsuario</td>
            <td>@usu.tbRol.NombreRol</td>
            <td>@usu.Email</td>
        </tr>
    }
</table>